---
import { cn } from '@/lib/utils'

const { href, external, class: className, underline, ...rest } = Astro.props

// Read base path from site config
const base = (Astro.site?.pathname ?? '').replace(/\/$/, '')

let finalHref = href ?? ''

// Handle home/root
if (!external && (href === '/' || href === '' || href === '.' || href === './')) {
  finalHref = `${base}/`
}
// Rewrite internal routes
else if (
  !external &&
  href &&
  !href.startsWith('http') &&
  !href.startsWith('#')
) {
  if (href.startsWith('/')) {
    finalHref = `${base}${href}`
  } else {
    finalHref = `${base}/${href}`
  }
}
---

<a
  href={finalHref}
  target={external ? '_blank' : '_self'}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline &&
      'underline decoration-muted-foreground underline-offset-[3px] hover:decoration-foreground',
    className,
  )}
  {...rest}
>
  <slot />
</a>
